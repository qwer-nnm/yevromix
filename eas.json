{
  "cli": {
    "version": ">= 11.0.0"
  },
  "build": {
    "production": {
      "channel": "production",
      "node": "20.11.0",
      "env": {
        "NPM_CONFIG_INSTALL_STRATEGY": "nested"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "autoIncrement": "versionCode"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production"
      }
    }
  }
}
